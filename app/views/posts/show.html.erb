<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<% if @post.comments.any? %>
    <% @post.comments.each do |comment| %>
      <p>
        <b>Comment:</b>
        <%= comment.content %>
      </p>
    <% end %>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
